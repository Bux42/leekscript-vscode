{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "LeekScript",
  "patterns": [
    {
      "include": "#keywords"
    },
    {
      "include": "#strings"
    },
    {
      "include": "#comments"
    },
    {
      "include": "#numbers"
    },
    {
      "include": "#operators"
    },
    {
      "include": "#functions"
    },
    {
      "include": "#variables"
    }
  ],
  "repository": {
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.leekscript",
          "match": "\\b(if|else|while|for|do|break|continue|return|switch|case|default|try|catch|throw|finally)\\b"
        },
        {
          "name": "keyword.other.leekscript",
          "match": "\\b(var|let|const|function|class|new|this|null|true|false|undefined)\\b"
        },
        {
          "name": "storage.type.leekscript",
          "match": "\\b(int|float|string|bool|array|object|void)\\b"
        },
        {
          "name": "keyword.operator.leekscript",
          "match": "\\b(and|or|not|in|instanceof|typeof)\\b"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.leekscript",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.leekscript",
              "match": "\\\\."
            }
          ]
        },
        {
          "name": "string.quoted.single.leekscript",
          "begin": "'",
          "end": "'",
          "patterns": [
            {
              "name": "constant.character.escape.leekscript",
              "match": "\\\\."
            }
          ]
        }
      ]
    },
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-slash.leekscript",
          "match": "//.*$"
        },
        {
          "name": "comment.block.leekscript",
          "begin": "/\\*",
          "end": "\\*/"
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.leekscript",
          "match": "\\b\\d+(\\.\\d+)?([eE][+-]?\\d+)?\\b"
        },
        {
          "name": "constant.numeric.hex.leekscript",
          "match": "\\b0[xX][0-9a-fA-F]+\\b"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.arithmetic.leekscript",
          "match": "\\+|\\-|\\*|\\/|%|\\*\\*"
        },
        {
          "name": "keyword.operator.comparison.leekscript",
          "match": "==|!=|<|>|<=|>=|===|!=="
        },
        {
          "name": "keyword.operator.assignment.leekscript",
          "match": "=|\\+=|\\-=|\\*=|\\/=|%="
        },
        {
          "name": "keyword.operator.logical.leekscript",
          "match": "&&|\\|\\||!"
        }
      ]
    },
    "functions": {
      "patterns": [
        {
          "name": "entity.name.function.leekscript",
          "match": "\\b([a-zA-Z_][a-zA-Z0-9_]*)\\s*(?=\\()",
          "captures": {
            "1": {
              "name": "entity.name.function.leekscript"
            }
          }
        }
      ]
    },
    "variables": {
      "patterns": [
        {
          "name": "variable.other.leekscript",
          "match": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\b"
        }
      ]
    }
  },
  "scopeName": "source.leekscript"
}
